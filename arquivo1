#variaveis

#valor inteiro (int)
variavel1 = 10
variavel2 = 20
variavel3 = 30

#valor palavra (str)
variavel4 = palavra
variavel5 = bio
variavel6 = logia 

#Mostrar na tela o valor de uma variável (print)
print variavel1
print variavel2
print variavel3

#Somar variáveis de valor inteiro
variavel1 + variavel2 + variavel3
variavel1 + (variavel2*variavel3)
variavel1 + (variavel2/variavel3)

#Concatenar variáveis de valor string
variavel5 + variavel6 (bio + logia)

#Lista de palavras reservadas
import keyword
print keyword.kwlist

#Type para testar o tipo da variável
type(2) is int
(True or False)

type(2.2) is float
(True or False)
#float pode registrar o valor de até 15 casas decimais depois da vírgula

type(2+2j) is complex
(True or False)

type('teste') is str
(True or False)

type([2, 4, 6, 8, 10, 12]) is list
(True or False)

type({}) is dict
(True or False)

a = 10
type(a)

b = 'biologia'
type(b)

c = 2.2
type(c)

print(a, "o type de a e", type(a))
print(b, "o type de b e", type(b))
print(c, "o type de c e", type(c))

#isistance
print(a, "é um numero inteiro?", isinstance(a,int))
print(a, "é um numero inteiro?", isinstance(a,str))
print(a, "é um numero inteiro?", isinstance(a,complex))

print(a, "é um numero inteiro?", isinstance(10,int))
print(b, "é um uma string?", isinstance(biologia,int))

#Lista
lista1 = 2, 4, 6, 8, 10
print lista1
print lista1[=0]
print lista1[=1]
print lista1[=2]
print lista1[=3]
print lista1[=4]
print lista1[=0:3]
print lista1[=2:]
